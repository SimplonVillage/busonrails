<!-- Interface parents -->
<p id="notice"><%= notice %></p>

<div class="container-fluid">
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="field">
<%= form_for @parent do |t| %>

  <p>
    <%= t.label "Civilité :" %>
    <%= t.select :civilite, %w{ M. Mme } %> <br> 
  </p>
  <p>
    <%= t.label "Nom :" %><br>
    <%= t.text_field :nom %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:nom %></div>
  </p> 
  <p>
    <%= t.label "Prénom :" %><br>
    <%= t.text_field :prenom %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:prenom %></div>
  </p> 
  <p>
    <%= t.label "Adresse :" %><br>
    <%= t.text_area :adresse %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:adresse %></div>
  </p>
  <p>
    <%= t.label "Tél domicile :" %><br>
    <%= t.text_field :teldom %>
  </p>
  <p>
    <%= t.label "Tél portable de la Mère :" %><br>
    <%= t.text_field :telport1 %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:telport1 %></div>
  </p>
  <p>
    <%= t.label "Tél portable du Père :" %><br>
    <%= t.text_field :telport2 %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:telport2 %></div>
  </p>
  <p>
    <%= t.label "Tél professionnel de la Mère :" %><br>
    <%= t.text_field :telpro1 %>
  </p>
  <p>
    <%= t.label "Tél professionnel du Père :" %><br>
    <%= t.text_field :telpro2 %>
  </p>


  <h2 class="titre">Personne à prévenir en cas d'urgence</h2>
  <p>
    <%= t.label "Civilité :" %>
    <%= t.select :civilite2, %w{ M. Mme } %> <br> 
  </p>
  <p>
    <%= t.label "Nom :" %><br>
    <%= t.text_field :urgnom %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:urgnom %>
    </div>
  </p>  
  <p>
    <%= t.label "Prénom :" %><br>
    <%= t.text_field :urgprenom %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:urgprenom %>
    </div>
  </p>
  <p>
    <%= t.label "Adresse :" %><br>
    <%= t.text_area :urgadresse %>
  </p> 
  <p>
    <%= t.label "Tél portable urgence :" %><br>
    <%= t.text_field :urgtelport %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:urgtelport %>
    </div>
  </p>
  <p>
    <%= t.label "Tél domicile :" %><br>
    <%= t.text_field :urgteldom %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:urgteldom %>
    </div>
  </p>
  <p>
    <%= t.label "Tél professionnel :" %><br>
    <%= t.text_field :urgtelpro %>
    <div class="alert alert-warning" role="alert"><%= error_message_for @parent,:urgtelpro %>
    </div>
  </p>

  <li>
  <div class="control-group">
    <%= label_tag :search, "Search For Address" %>
    <%= text_field_tag :location_search, nil, class: "span12 search-query", type: "search" %>
  </div>
  <%= render partial: "googlemap" %>
  
  </li>
    <%= t.submit "Enregistrer", :class => "btn btn-info nav-btn" %>
     </div>
    </div>
  </div>
</div>
<% end %>