<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="field">
        <%= form_for @enfant do |f| %>

        <p>
          <%= f.label  "Sexe :" %>
          <%= f.select :sexe, %w{ Masculin Féminin } %> <br> 
        </p>
        <p>
           <%= f.label "Nom :" %><br>
           <%= f.text_field :nomenfant %>
        </p>   
        <p>
          <%= f.label "Prénom :" %><br>
          <%= f.text_field :prenomenfant %>
        </p> 
        <p>
          <%= f.label "Date de naissance :" %><br>
          <%= date_select :enfant, :birthday, start_year: Date.today.year - 13, end_year: Date.today.year - 2 %>
        </p> 
        <p>
          <%= f.label "Classe :" %><br>
          <%= f.select :classe_id, @classes %>
        </p>


        <div class="row">
          <div class="col-md-3 ">
            <%= f.submit "Envoyer", :class => "btn btn-info nav-btn" %>
          </div>
          <div class="col-md-3 ">
            <%= button_to "Ajouter un enfant",  new_enfant_path, :class => "btn btn-info", :method => :get %>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>
