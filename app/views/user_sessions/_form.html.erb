
<%= form_tag user_sessions_path, :method => :post do %>
  
  <div class="field">
    <%= label_tag :email, "Email" %><br />
    <%= text_field_tag :email %>
  </div>
  
  <div class="field">
    <%= label_tag :password, "Mot de passe" %><br />
    <%= password_field_tag :password %>
  </div>
  
  <div class="actions">
    <%= submit_tag "Connexion" %>
  </div>
<% end %>